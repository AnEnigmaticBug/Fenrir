<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main_nav_graph"
    app:startDestination="@id/eventListFragment">

    <fragment
        android:id="@+id/eventListFragment"
        android:name="com.example.nishant.fenrir.events.eventlist.EventListFragment"
        android:label="EventListFragment"
        tools:layout="@layout/fra_event_list">
        <action
            android:id="@+id/ac_event_list_to_event_info"
            app:destination="@id/eventInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/eventInfoFragment"
        android:name="com.example.nishant.fenrir.events.eventinfo.EventInfoFragment"
        android:label="EventInfoFragment"
        tools:layout="@layout/fra_event_info">
        <argument
            android:name="eventId"
            app:type="string" />
    </fragment>
</navigation>